local Starlight = loadstring(game:HttpGet("https://raw.githubusercontent.com/StarlightProject/StarlightUI/main/Source.lua"))()
local NebulaIcons = loadstring(game:HttpGet("https://raw.githubusercontent.com/Nebula-Softworks/Nebula-Icon-Library/master/Loader.lua"))()

local Window = Starlight:CreateWindow({
    Name = "Tokai",
})

local TabSection = Window:CreateTabSection("Tabs")

local Tab = TabSection:CreateTab({
    Name = "Main",
    Icon = NebulaIcons:GetIcon('view_in_ar', 'Material'),
    Columns = 2,
}, "INDEX")

local Groupbox = Tab:CreateGroupbox({
    Name = "Groupbox",
    Column = 1,
}, "INDEX")

Groupbox:CreateButton({
    Name = "Cool Button",
    Icon = NebulaIcons:GetIcon('check', 'Material'),
    Callback = function()
         print("hi")
    end,
}, "INDEX")

Groupbox:CreateToggle({
    Name = "Toggle",
    CurrentValue = false,
    Callback = function(Value)
        print("Toggle =", Value)
    end,
}, "INDEX")

Groupbox:CreateSlider({
    Name = "Slider",
    Range = {0, 100},
    Increment = 1,
    Callback = function(v)
        print("Slider =", v)
    end,
}, "INDEX")

Groupbox:CreateInput({
    Name = "Input",
    CurrentValue = "",
    PlaceholderText = "Type here",
    Callback = function(Text)
        print("Text =", Text)
    end,
}, "INDEX")

Groupbox:CreateLabel({
    Text = "Label Demo"
})

Groupbox:CreateParagraph({
    Name = "Paragraph",
    Content = "This is a paragraph.\nSupports multi-line text."
}, "INDEX")

local KeyLabel = Groupbox:CreateLabel({
    Text = "Keybind:"
})
KeyLabel:AddBind({
    CurrentValue = "Q",
    Callback = function(v)
        print("Key =", v)
    end,
}, "INDEX")

local D1 = Groupbox:CreateLabel({ Text = "Dropdown:" })
D1:AddDropdown({
    Options = {"Option 1", "Option 2"},
    CurrentOptions = {"Option 1"},
    Callback = function(v)
        print("Selected =", v)
    end,
}, "INDEX")
